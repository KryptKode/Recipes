<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_item_container"
    android:layout_margin="@dimen/widget_item_margin"
    android:background="@color/widget_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_ingredient_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_item_margin"
        android:layout_marginEnd="@dimen/widget_item_margin"
        android:layout_marginRight="@dimen/widget_item_margin"
        android:gravity="end|top"
        tools:text="1" />

    <TextView
        android:id="@+id/widget_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/widget_item_margin"
        android:layout_marginStart="@dimen/widget_item_margin"
        android:layout_marginBottom="@dimen/widget_item_margin"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Bacon Meatballs Apples" />

</LinearLayout>