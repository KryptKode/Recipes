<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#9F222222"
    android:layout_height="wrap_content"
    android:layout_margin = "@dimen/tv_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/number_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginRight="@dimen/tv_margin"
        android:layout_marginEnd="@dimen/tv_margin"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="1" />

    <TextView
        android:id="@+id/ingredient_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/tv_margin"
        android:layout_marginStart="@dimen/tv_margin"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Mascapone Cheese(room temperature)" />

    <TextView
        android:id="@+id/quantity_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="@dimen/tv_margin"
        android:layout_marginStart="@dimen/tv_margin"
        android:layout_margin="@dimen/tv_margin_icon"
        android:drawableLeft="@drawable/ic_measuring_cup_black"
        android:drawableStart="@drawable/ic_measuring_cup_black"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="2 CUPS" />


</LinearLayout>