<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PlayerStyle">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="MediaButtonPrevious" parent="ExoMediaButton.Previous">
        <item name="android:tint">@color/colorAccent</item>
    </style>


    <style name="MediaButtonRewind" parent="ExoMediaButton.Rewind">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="MediaButtonPlay" parent="ExoMediaButton.Play">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="MediaButtonPause" parent="ExoMediaButton.Pause">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="MediaButtonFastForward" parent="ExoMediaButton.FastForward">
        <item name="android:tint">@color/colorAccent</item>
    </style>

</resources>
